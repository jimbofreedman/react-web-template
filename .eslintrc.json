{
    "env": {
        "jest": true
    },
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react",
        "plugin:prettier/recommended",
        "eslint-config-prettier",
        "plugin:jest/recommended",
        "plugin:jest/style"
    ],
    "parser": "babel-eslint",
    "rules": {
        "import/no-unresolved": "off",
        "react/prop-types": 0,
        "react/jsx-props-no-spreading": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100
            }
        ]
    },
    "plugins": ["prettier", "jest"]
}
